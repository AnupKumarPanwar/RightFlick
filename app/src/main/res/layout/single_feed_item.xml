<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/john"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_weight="1"/>
        
        <TextView
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/user_name"
            android:gravity="center|left"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="John Abraham"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
            android:background="#fff"
            android:minHeight="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <ImageView
                android:scaleX="0.001"
                android:scaleY="0.001"
                android:visibility="invisible"
                android:id="@+id/white_like"
                android:src="@drawable/ic_heart_white_24dp"
                android:layout_centerInParent="true"
                android:layout_width="150dp"
                android:layout_height="150dp" />
        </RelativeLayout>

    <LinearLayout
        android:gravity="center|left"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/likeButton"
            android:stateListAnimator="@animator/scale"
            android:button="@null"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/like_icon"/>

        <CheckBox
            android:id="@+id/commentButton"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_chat_bubble_outline_black_24dp"/>
    </LinearLayout>

    <TextView
        android:textColor="#000"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="caption"
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
    
